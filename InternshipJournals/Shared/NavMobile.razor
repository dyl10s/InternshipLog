<!-- HEADER MOBILE-->
<header class="header-mobile d-block d-lg-none">
    <div class="header-mobile__bar">
        <div class="container-fluid">
            <div class="header-mobile-inner">
                <a class="logo" href="index.html">
                    <img src="images/icon/logo.png" alt="CoolAdmin" />
                </a>
                <button class="hamburger hamburger--slider" type="button" @onclick="toggle">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <nav class="navbar-mobile" style="@(isShowing ? "display:block;" : "")">
        <div class="container-fluid">
            <ul class="navbar-mobile__list list-unstyled">
                <li>
                    <NavLink href="/Entry" Match="NavLinkMatch.All">
                        <i class="fas fa-table"></i>Entries
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/Export" Match="NavLinkMatch.All">
                        <i class="far fa-check-square"></i>Export
                    </NavLink>
                </li>
            </ul>
        </div>
    </nav>
</header>
<!-- END HEADER MOBILE-->

@code{

    bool isShowing = false;

    void toggle()
    {
        isShowing = !isShowing;
    }

    void Hide()
    {
        isShowing = false;
    }

}
