@page "/Login"
@layout EmptyLayout

<div class="page-content--bge5">
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                <div class="login-logo">
                    <a href="#">
                        <img src="images/icon/logo.png" alt="CoolAdmin">
                    </a>
                </div>
                <div class="login-form">
                    <form @onsubmit="LoginUser">
                        <div class="form-group">
                            <label>Username</label>
                            <input class="au-input au-input--full" name="username" placeholder="Username" @bind="Username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="au-input au-input--full" type="password" name="password" placeholder="Password" @bind="Password">
                        </div>
                        <label class="w-100 text-center text-danger">@ErrorMessage</label>
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                    </form>
                    <div class="register-link">
                        <p>
                            Don't you have account?
                            <a href="/Register">Sign Up Here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>